{#
/**
* @file
* Theme override to display a single component.
*
* footer area template
*/
#}
<footer class="footer">
    <div class="container">
        <div class="row">
            <div clas="col-lg-12">
                <div class="logo-footer">
                    <a class="text-center" href="{{ url('<front>') }}"></a><img class="img-fluid"
                        src="{{ base_path ~ directory }}/images/logo-clear.png"></a>
                </div>
            </div>
            {% if page.footer_second %}
            <div class="col-lg-4 order-md-1 order-lg-2 order-sm-1 col-sm-12">
                <div class="footer-mid">
                    {{ page.footer_second }}
                </div>
            </div>
            {% endif %}
            {% if page.footer_first %}
            <div class="col-lg-4 col-md-6 order-md-2 order-lg-1 order-sm-2 col-sm-12 footer-bottom-first">
                {{ page.footer_first }}
            </div>
            {% endif %}

            {% if page.footer_third %}
            <div class="col-lg-4 col-md-6 order-md-3 order-lg-3 order-sm-3 col-sm-12 text-center">
                <div class="news-letter">
                    {{ page.footer_third }}
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</footer>