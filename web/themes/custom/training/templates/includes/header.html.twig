{#
/**
* @file
* Theme override to display a single component.
*
* header area template
*/
#}

<header class="header">
    <div class="container">
        <div class="row header-top">
            {% if page.social_icon %}
            <div class="col-lg-4 col-sm-12 social-img">
                {{ page.social_icon }}
            </div>
            {% endif %}
            <div class="col-lg-4 col-sm-12 site-logo">
                <a href="{{ url('<front>') }}" title="{{ site_name }}">
                    <img src="{{ logopath }}" title="{{ site_name }}" alt="logo" />
                </a>
            </div>
            {% if page.search %}
            <div class="col-lg-4 col-sm-12 search-sec">
                {{ page.search }}
            </div>
            {% endif %}
        </div>
    </div>
    {% if page.main_menu %}
    <div class="header-menu">
        <div class="container">
        {{ page.main_menu }}
        </div>
    </div>
    {% endif %}
</header>